			<div class="container">
            <div class=" col-md-7">
                <a href="@item.Url">
                    <img class="img-responsive" src="http://placehold.it/700x300" alt="@item.Name">
                </a>
            </div>
            <div class="col-md-5">
                <h3>@item.Name</h3>
                <p>bit of the text</p> 
