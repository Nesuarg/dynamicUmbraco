@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<!-- Page Heading -->
        <div class="row">
			<div id="main-container" class="container"
            <div class="col-lg-12">
                <h1> @Umbraco.Field("pageName") </h1>
            </div>
		</div>
        </div>
        <!-- /.row -->								
@{
	var selection = CurrentPage.Site().FirstChild("ArticlesMain").Children("ArticlesItem").Where("Visible").OrderBy("CreateDate desc");
}

	
	
	        <!-- Project One -->
	@foreach(var item in selection){
